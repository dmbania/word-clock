root = true

[*]
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
charset = utf-8

# intellij specific
ij_typescript_use_double_quotes = false
ij_javascript_use_double_quotes = false
ij_typescript_import_prefer_absolute_path = true

[*.json]
indent_size = 2

[*.yml]
indent_size = 2
